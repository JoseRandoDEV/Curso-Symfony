{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} - Frikyland{% endblock %}

{% block body %}
<div class="post-details-container">
    <article class="post-details-card">
        {% if post.file %}
            <img src="{{ asset('uploads/files/' ~ post.file) }}" alt="{{ post.title }}" class="post-details-image">
        {% endif %}
        <div class="post-details-info">
            <h1 class="post-details-title">{{ post.title }}</h1>
            <p class="post-details-date">{{ post.creationDate ? post.creationDate|date('d/m/Y') : '' }}</p>
            <p class="post-details-content">{{ post.description }}</p>
            <a href="{{ path('app_post') }}" class="back-button">‚Üê Volver</a>
        </div>
    </article>
</div>
{% endblock %}
